{
  "name": "launchedto.space-project",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "postinstall": "cd website && yarnOrNpm install && cd ../editor && yarnOrNpm install",
    "clean": "rm -rf dist && rm -rf node_modules && cd website && rm -rf node_modules && cd ../editor && rm -rf node_modules && rm -rf dist",
    "serve": "cd website && yarnOrNpm run serve",
    "build": "cd website && yarnOrNpm run build",
    "lint": "cd website && yarnOrNpm run lint",
    "editor": "cd editor && yarnOrNpm run dev",
    "thumb": "bash ./scripts/createThumbnails.sh"
  },
  "devDependencies": {
    "eslint": "^4.4.1",
    "eslint-config-standard": "^10.2.1",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-html": "^3.1.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "yarn-or-npm": "^1.0.0"
  }
}
